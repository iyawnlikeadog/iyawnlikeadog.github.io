// main: style.styl

classes = design 86, html 95, front 80, back 65, cms 75

for class in classes

	@keyframes RiseHorizontal-{class} {
		from { width: 0; opacity: 0.5; }
		45%  { opacity: 1; }
		to   { width: class[1]+'%'; }
	}

	@-webkit-keyframes RiseHorizontal-{class} {
		from { width: 0; opacity: 0.5; }
		45%  { opacity: 1; }
		to   { width: class[1]+'%'; }
	}

