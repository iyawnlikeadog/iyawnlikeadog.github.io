// intro

#intro
	padding 0 10px
	color #fff

	// .anim
	// 	transition-delay .4s
	// 	transition-duration 1s
	// 	position relative

	.central
		position relative
		top 50%
		transform translateY(-50%)
		text-align center

		*
			display inline-block
			margin 0 auto
			color #fff

		h1,h2,div.langs
			display block

		.langs
			span
				display inline-block
				cursor pointer

		h1
			position relative
			text-transform none
			margin-top 7px
			margin-left -2px

		h2
			height 27px
			filter blur(0)
		  -webkit-filter blur(0)

		img.avatar
			width 130px
			height 130px
			border-radius 50%
			border 3px #fff solid
			// transform scale(-1, 1)

	.icon-down-open
		display block
		font-size 18px
		height 38px
		width 38px
		line-height 32px
		text-align center
		border 3px #fff solid
		border-radius 50%
		position absolute
		left 50%
		bottom 40px
		margin-left -19px
		&:hover
			font-size 22px
			height 44px
			width 44px
			margin-left -22px
			line-height 38px
