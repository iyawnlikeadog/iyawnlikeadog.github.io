// main: style.styl

#noise, #particles-js
	position fixed
	width 100%
	height 100%
	top 0
	right 8px
	z-index 0
	-webkit-touch-callout: none;
	-webkit-user-select: none;
	-khtml-user-select: none;
	-moz-user-select: none;
	-ms-user-select: none;
	user-select: none;

#noise
	background url(../../img/static_animated.gif) 0 0 repeat
	opacity 0

