	.row { margin-left: -+$g }
	.col { border-width: $g }

	.item
		line-height 0
		border-radius $br
		// box-shadow 0 1px 2px rgba(#000, .04), 0 2px 8px rgba(#000, .02)

		p, h4 { cursor: default }

		.img-caption
			// border 2px #fff solid
			position relative
			overflow hidden
			z-index 1
			border 5px #fff solid
			// border-top-left-radius $br
			// border-top-right-radius $br

		img
			transition-duration .5s
			&.blurred
				transition-duration 10s
				// -webkit-filter blur(3px)
				// -moz-filter blur(3px)
				// -o-filter blur(3px)
				// -ms-filter blur(3px)
				// filter blur(3px)
				transform scale(2,2)

		.caption
			position absolute
			width 100%
			height 100%
			top 0
			left 0
			background rgba(#111, .8)
			opacity 0.000001 // not 0 cuz it doesn't update language properly then
			transition-duration .3s
			padding 20px
			display flex
			flex-direction column
			justify-content center
			&:hover
				opacity 1
				.icon-link
					transform rotate(180deg)
			.inner-caption
				text-align center
				// top 50%
				// transform translateZ(0) translateY(-50%)
				p
					color #fff
					font-size 15px
					line-height 20px
					cursor pointer
				.icon-link
					display block
					font-size 44px
					margin-top 1px
					margin-bottom 10px
					color #fff
					transition-duration .5s

		.name
			margin-top 5px
			text-transform uppercase
