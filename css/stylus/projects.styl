// main: style.styl

$g  = 30px
$br = 2px

#projects

	.section-inner
		height calc(100vh - 40px)
		position relative

	.container
		@extend .clearfix
		text-align right
		height inherit

	// every slide

	.owl-item
		height calc(100vh - 40px)
		.slide
			height calc(100vh - 40px)
		.container
			max-width 1140px
			// top 50%
		// 	position relative
		// 	transform translateY(-50%)

	// first slide

	.owl-item:first-of-type
		.container
			max-width 1060px

	img.brush-stroke
		width 80%
		height auto
		margin-bottom -78px
		float left

	div.float-right
		text-align right
		max-width 700px
		float right
		p
			color $light-text
			float right
			margin-bottom 20px
		h4
			text-transform uppercase
			letter-spacing 4.6px

