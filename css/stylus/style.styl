// preloader

#cover
	background #f6f6f6
	border 20px #fff solid
	position fixed
	top 0
	left 0
	z-index 100
	width 100%
	height 100%
	opacity 1
	transition-delay .5s
	transition-duration 1s
	transition-timing-function linear

	#preloader
		text-align center
		position relative
		top 50%
		margin-top -15px

		[class^="bar-"]
			width 8px
			height 30px
			background $sea
			display inline-block
			margin 0 1px
			border-radius 1px
			position relative
			opacity .1
			animation zoomBar 1.4s infinite ease-in-out
			&.bar-2 { animation-delay: (1.4 / 2 / 3 * 1) s }
			&.bar-3 { animation-delay: (1.4 / 2 / 3 * 2) s }

			@keyframes zoomBar {
				from { transform: scale(1.0); -webkit-transform: scale(1.0); opacity: .1 }
				50%  { transform: scale(1.2); -webkit-transform: scale(1.2); opacity: 1  }
				to   { transform: scale(1.0); -webkit-transform: scale(1.0); opacity: .1 }
			}

