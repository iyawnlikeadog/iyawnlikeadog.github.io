// glitch text

.glitch
	&:after
		content attr(data-content)
		position absolute
		left 1px
		text-shadow -2px 0 rgb(255, 0, 0)
		top 0
		color #111
		opacity .5
		overflow hidden
		clip rect(0,900px,0,0)
		animation noise-anim 2s infinite linear alternate-reverse
		width 100%

	&:before
		@extend .glitch:after
		left -1px
		text-shadow 2px 0 rgb(0, 255, 255)
		color #333
		animation noise-anim 3s infinite linear alternate-reverse

random(min,max)
	return floor(math(0, 'random')*(max - min + 1) + min)

@keyframes {noise-anim}
	for i in 0..20
		{5% * i}
			clip rect(random(0,100)px,9999px,random(0,100)px,0)

// send msg

#sendmsg >*::-webkit-input-placeholder       { opacity: 1; transition: opacity 0.3s ease; color: #fff; }
#sendmsg >*::-moz-placeholder                { opacity: 1; transition: opacity 0.3s ease; color: #fff; }
#sendmsg >*:-moz-placeholder                 { opacity: 1; transition: opacity 0.3s ease; color: #fff; }
#sendmsg >*:-ms-input-placeholder            { opacity: 1; transition: opacity 0.3s ease; color: #fff; }
#sendmsg >*:focus::-webkit-input-placeholder { opacity: 0; transition: opacity 0.3s ease; }
#sendmsg >*:focus::-moz-placeholder          { opacity: 0; transition: opacity 0.3s ease; }
#sendmsg >*:focus:-moz-placeholder           { opacity: 0; transition: opacity 0.3s ease; }
#sendmsg >*:focus:-ms-input-placeholder      { opacity: 0; transition: opacity 0.3s ease; }
