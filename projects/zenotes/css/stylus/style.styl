	text-align center
	// border-bottom 1px #EDF0F3 solid

	h2
		color #676D77

	h4
		color #A6A8AB
		font-weight 400

	span
		color #81ACEA
		margin-bottom 30px
		display inline-block
		background rgba(#fff, .9)
		border-radius 50%
		height 80px
		width 80px
		line-height 80px
		// transform rotate(-22deg)
		// line-height 76px
		// border 2px #E7E9EC dashed
		&.icon-doc-text,
		&.icon-table
			font-size 28px
		&.icon-menu
			font-size 34px
		&.icon-code
			font-size 30px

	h3
		text-transform uppercase
		color #484848
		margin-bottom 12px

	p
		color #6C6D6F

#testimonials
	// background: #FCFCFC
	background: #2F363E
	color: #fff
	h2
		margin-bottom: 0
		line-height: 1.15
	.separator
		margin: 25px 0
		background: #FF4F5C
	p
		color: #B1B1B1
	.avatar
		border-radius: 50%
		width: 70px
		height: auto
		opacity: .7
		position: absolute
	div.speaks
		// background: rgba(#fff, .07)
		background: #3D434B
		border-radius: 5px
		padding: 18px 22px
		h4
			font-size: 16px
			line-height: 24px
			margin-bottom: 0
			opacity: .8
	svg
		margin: 0 0 -4px 71px
		display: block
	p.company
		margin-left: 85px
	h3
		margin: 18px 0 0 85px
		font-size: 15px

footer
	background: #1A1E25
	color: #858C94
	text-align: center
	font-weight: 600
	.container
		padding-bottom: 28px

/* Mobile Version */

@media screen and (max-width: $md)

	.container
		padding-left: 20px!important
		padding-right: 20px!important

	#features
		.container
			padding-bottom: 20px
		.col
			padding-bottom: 50px

	.speaks
		margin-top: 30px

@media screen and (max-width: $sm)

	.container
		padding-left: 10px!important
		padding-right: 10px!important
